<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item android:drawable="@drawable/coinholder_bg" />
            <item android:bottom="8dp" android:left="3dp" android:right="3dp">
                <shape android:bottom="8dp">
                    <solid android:color="@color/steel_dark" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/coinholder_bg" />
            <item android:bottom="8dp" android:left="3dp" android:right="3dp">
                <shape android:bottom="8dp">
                    <solid android:color="@color/steel_20" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

