<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/viewHolderRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="89dp"
    android:layout_marginEnd="13dp"
    android:layout_marginStart="13dp"
    android:background="?CoinItemBackground"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingEnd="11dp"
    android:paddingStart="11dp"
    android:paddingTop="10dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <View
            android:id="@+id/coinIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/circle_shape_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <View
            android:id="@+id/textCoinName"
            android:layout_width="152dp"
            android:layout_height="22dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/text_placeholder_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/coinIcon"
            />

        <View
            android:id="@+id/textCoinAmount"
            android:layout_width="90dp"
            android:layout_height="22dp"
            android:background="@drawable/text_placeholder_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textCoinName"
            />

        <View
            android:id="@+id/textExchangeRate"
            android:layout_width="120dp"
            android:layout_height="18dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/text_placeholder_background"
            app:layout_constraintStart_toStartOf="@+id/coinIcon"
            app:layout_constraintTop_toBottomOf="@+id/coinIcon"
            />

        <View
            android:id="@+id/textCurrencyAmount"
            android:layout_width="64dp"
            android:layout_height="22dp"
            android:background="@drawable/text_placeholder_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/textExchangeRate"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
